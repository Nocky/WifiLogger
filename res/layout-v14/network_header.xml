<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/list_header_background" >

    <Switch
        android:id="@+id/toggle_header_locations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:checked="true"
        android:focusable="false"
        android:minHeight="30dp" />

    <TextView
        android:id="@+id/label_header_locations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/toggle_header_locations"
        android:layout_alignBottom="@+id/toggle_header_locations"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/toggle_header_locations"
        android:text="@string/label_toggle_locations"
        android:textAppearance="@style/Text.Label" />

</RelativeLayout>